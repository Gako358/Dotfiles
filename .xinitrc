#!/bin/sh

# Xrandr screen settings
# xrandr --output DP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --mode 1920x1080 --pos 1920x0 --rotate normal
xrandr --output DisplayPort-0 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output DisplayPort-1 --mode 1920x1080 --pos 3840x0 --rotate right --output HDMI-A-0 --mode 1920x1080 --pos 0x0 --rotate normal

# set the background
if [ -f /usr/bin/feh ]; then
    # feh --bg-fill /home/merrinx/Pictures/Wallpapers/abstract_earth.jpg &
    feh --bg-scale --no-xinerama /home/merrinx/Pictures/Wallpapers/xinerama_redforrest.png &
fi

# enable window compositing
# This have some errors when running monitors with different refresh rate
if [ -f /usr/bin/picom ]; then
	DISPLAY=":0" picom -b & 
fi

# Make sure we do not have any screensavers activated or sleep timers
xset s 0 -dpms

# Start slstatus bar
slstatus &

# Gnome keyring
# dbus-update-activation-environment --systemd DISPLAY
# eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
# export SSH_AUTH_SOCK

# Autostart Apps
mopidy &
brave &
sleep 1 && discord &
sleep 3 && ckb-next-daemon &

# launch dwm
exec dwm

