# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 3
}

order += "volume master"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "wireless wlp2s0"
order += "battery all"
order += "tztime local"

volume master {
        #	format = " ♪: %volume  " 
	    device = "default"
	    mixer = "Master"
	    mixer_idx = 0
	    # termsyn font
	    format = "%volume "
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail:/ " 
}

wireless wlan0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = " ☡ WiFi "
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
